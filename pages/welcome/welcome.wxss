/* pages/welcome/welcome.wxss */
.container{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #fff;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 100rpx;
  border: 4rpx solid #fff;
}
.user-name{
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 100rpx;
}
.enter-container{
  font-size: 22rpx;
  border: 1px solid #fff;
  width: 200rpx;
  height: 80rpx;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 200rpx;
}
.enter{
  line-height: 80rpx;
  font-weight: bold;
}